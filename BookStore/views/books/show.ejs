<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <img src="<%= book.image %>" class="card-img-top" alt="<%= book.title %>" style="max-height: 400px; object-fit: contain;">
            <div class="card-body">
                <h1 class="card-title"><%= book.title %></h1>
                <h6 class="card-subtitle mb-3 text-muted">By <%= book.author %></h6>
                
                <div class="mb-4">
                    <h5>Details</h5>
                    <p><strong>Price:</strong> $<%= book.price.toFixed(2) %></p>
                    <p><strong>ISBN:</strong> <%= book.isbn %></p>
                    <p><strong>Stock:</strong> <%= book.stock %></p>
                    <p><strong>Description:</strong></p>
                    <p><%= book.description %></p>
                </div>

                <div class="btn-group">
                    <a href="/books/<%= book._id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/books/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                    </form>
                    <a href="/books" class="btn btn-secondary">Back to Books</a>
                </div>
            </div>
        </div>
    </div>
</div> 